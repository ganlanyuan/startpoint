<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="">
  <meta name="HandheldFriendly" content="True">
  <meta name="MobileOptimized" content="320">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
  <meta http-equiv="X-UA-Compatible" content="IE=Edge">
  <title>Pages</title>
   <link href="https://fonts.googleapis.com/css?family=Montserrat:200,300,700" rel="stylesheet">
  <style>
    body {
      --bg: hsla(0, 0%, 0%, 0.04);

      margin: 0;
      font-family: Montserrat, sans-serif;
      font-weight: 300;
      background: #eee;
      background: var(--bg);
    }
    ul { 
      margin: 0 0 20px 0;
      padding: 0;
    }
    li {
      list-style: none;
      margin: 0;
      padding: 0;
      text-transform: capitalize;
    }
    h2 {
      font-weight: 700;
      font-size: 2.5rem;
      text-transform: capitalize;
      margin-bottom: 1em !important;
      text-align: center;
    }
    a {
      color: inherit;
      text-decoration: none;
    }
    .container { margin: 30px 0; }
    .container h2 { padding: 0 20px; }
    .list {
      display: grid;
      grid-gap: 20px;
    }
    .list li {
      position: relative;

      font-size: 1.8rem;
      line-height: 1.5;
      text-transform: capitalize;
      background: #fff;
    }
    @supports (display: grid) {
      .list li {
        height: 0;
        padding-bottom: 50%;
      }
      .list a {
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
      }
    }
    .list a {
      transition: all 0.25s;
      display: -webkit-flex;
      display: -moz-flex;
      display: -ms-flex;
      display: -o-flex;
      display: flex;
      padding: 20px;
      -webkit-box-sizing: border-box;
      -moz-box-sizing: border-box;
      box-sizing: border-box;
    }
    .list a:hover {
      background: #CBEEFF;
      background: hsl(200, 100%, 90%);
    }
    .list span {
      display: block;
      margin: auto 0;
    }
    @media screen and (min-width: 600px) {
      .list { grid-template-columns: repeat(2, 1fr); }
    }
    @media screen and (min-width: 900px) {
      .list { grid-template-columns: repeat(3, 1fr); }
    }
    @media screen and (min-width: 1200px) {
      .list { grid-template-columns: repeat(4, 1fr); }
    }
    @media screen and (min-width: 1500px) {
      .list { grid-template-columns: repeat(5, 1fr); }
    }
  </style>
</head>
<body>

<div class="container">
  <h2>Pages</h2>
  {% for group in pages %}
  <ul class="list">
    {% for url, name in group %}
    <li><a href="{{ url }}.html"><span>{{ name | capitalize }}</span></a></li>
    {% endfor %}
  </ul>
  {% endfor %}
</div>  

<script>
  var doc = document,
      win = window,
      body = doc.body;
  win.addEventListener('click', function(e) {
    var target = lookupByTag(e.target, 'a');
    if (target && e.altKey) {
      e.preventDefault();
      var url = location.origin + '/' + target.getAttribute('href').replace('public', 'test/w3c/html'),
          w = win.open(url, '_blank');
      w.focus();
    }
  });

  function lookupByTag (el, t) {
    if (el === body) { return null; }
    return el.nodeName.toLowerCase() !== t ? lookupByTag(el.parentNode, t) : el;
  }
</script>
</body>
</html>